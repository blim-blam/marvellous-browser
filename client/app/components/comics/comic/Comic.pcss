@import '../../../styles/variables.pcss';

.comic {
    width: 100%;
    height: 100%;
    display: flex;
    overflow: auto;
    margin-bottom: 100px;

    &__hero {
        width: 50%;
    }

    &__body {
        padding-left: 20px;
    }

    &__characters {
        display: flex;
        width: 100%;

        &__character {
            lost-waffle: 1/2 5 15px;

            img {
                width: 100%;
            }
        }
    }
}